CC		= @CC@
DEFS		= @DEFS@
CFLAGS		= @CFLAGS@ -O $(DEFS)
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@

exec_prefix     = @exec_prefix@
bindir          = @bindir@

RM		= @RM@
INSTALL		= @INSTALL@

TARGET		= mbuffer
SOURCES		= mbuffer.c
OBJECTS		= $(SOURCES:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) $(LDFLAGS) $(LIBS) $(OBJECTS) -o $@

clean:
	-$(RM) $(OBJECTS)

distclean: clean
	-$(RM) $(TARGET) config.h config.log \
	config.status Makefile mbuffer.1

install:
	$(INSTALL) $(TARGET) $(bindir)

