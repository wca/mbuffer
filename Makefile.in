CC		= @CC@
DEFS		= @DEFS@
CFLAGS		= @CFLAGS@ -O $(DEFS)
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@

prefix		= @prefix@
exec_prefix     = @exec_prefix@
bindir          = @bindir@
mandir		= @mandir@/man1

RM		= @RM@
INSTALL		= @INSTALL@

TARGET		= mbuffer
SOURCES		= mbuffer.c
OBJECTS		= $(SOURCES:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(LIBS) $(OBJECTS) -o $@

clean:
	-$(RM) $(OBJECTS)

distclean: clean
	-$(RM) $(TARGET) config.h config.log \
	config.status Makefile mbuffer.1 core

install:
	$(INSTALL) -d $(DESTDIR)$(bindir)
	$(INSTALL) $(TARGET) $(DESTDIR)$(bindir)
	$(INSTALL) mbuffer.1 $(DESTDIR)$(mandir)
